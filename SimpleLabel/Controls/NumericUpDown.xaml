<UserControl x:Class="SimpleLabel.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="22">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="18" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="textBox" Grid.Column="0"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 TextChanged="TextBox_TextChanged"
                 IsUndoEnabled="False"
                 VerticalContentAlignment="Center" />

        <StackPanel Grid.Column="1" VerticalAlignment="Stretch">
            <Button x:Name="btnUp" Content="▲" Height="11" FontSize="7" Padding="0"
                    Click="BtnUp_Click" />
            <Button x:Name="btnDown" Content="▼" Height="11" FontSize="7" Padding="0"
                    Click="BtnDown_Click" />
        </StackPanel>
    </Grid>
</UserControl>
