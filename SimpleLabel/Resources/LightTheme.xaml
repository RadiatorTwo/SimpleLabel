<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Panel Backgrounds -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SplitterBackgroundBrush" Color="#CCCCCC"/>

    <!-- Canvas Area -->
    <SolidColorBrush x:Key="CanvasBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="CanvasAreaBackgroundBrush" Color="LightGray"/>

    <!-- Accents -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="Black"/>

    <!-- Icons & Button Hover -->
    <SolidColorBrush x:Key="IconBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="MenuHoverBackgroundBrush" Color="#D0D0D0"/>

    <!-- Control Styling -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ControlDisabledBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="GridSplitterHoverBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="SliderTrackBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="#666666"/>
</ResourceDictionary>
